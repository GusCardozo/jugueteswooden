@model IEnumerable<Wooden.Models.CategoriaJuguetes>

@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-10 edit-form">
    <h3>Categorías</h3>
    <p>
        <a class="btn rounded text-dark btn-primary border-0 m-md-2 px-md-4" 
            asp-action="Create">
            Crear Categoría
        </a>
        @* <a asp-action="Create">Create New</a> *@
    </p>
    <p>
        <a class="btn rounded text-dark btn-primary border-0 m-md-2 px-md-4" 
            asp-controller="Juguetes" asp-action="Index">
            Ir a Juguetes
        </a>
        @* <a asp-controller="Juguetes" asp-action="Index">Juguetes</a> *@
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" 
                        class="btn rounded text-dark btn-primary border-0 m-md-2 px-md-4">
                        Editar
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@item.Id" 
                        class="btn rounded text-dark btn-primary border-0 m-md-2 px-md-4">
                        Eliminar
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>